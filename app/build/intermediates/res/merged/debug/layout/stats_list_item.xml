<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="match_parent" >
        
        <view
            android:id="@+id/iv_stats_item_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            class="de.zeitner.android.games.luek.widget.ExtendedImageView"
            android:src="@drawable/fragezeichen" />

        <TextView
            android:id="@+id/tv_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="Richtige, Falsche: 0, 5"
            android:visibility="gone" />
        
        <view
            android:id="@+id/iv_statsvalues"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            class="de.zeitner.android.games.luek.widget.StatsImageView" />
    </TableRow>

</TableLayout>