<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameTableLayoutAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RecognizeFragment" >

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TableLayout
        android:id="@id/GameTableLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical" >

        <TableRow
            android:id="@+id/CardRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical" >
        </TableRow>

        <TableRow
            android:id="@+id/CardRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical" >
        </TableRow>

        <TableRow
            android:id="@+id/CardRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical" >
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/RecognizeTrBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/iv_questionmark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/fragezeichen" />

        <view
            android:id="@+id/iv_infobox"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="3"
            class="de.zeitner.android.games.luek.widget.InfoboxImageView"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/iv_repeatsound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ear" />
    </TableRow>

</TableLayout>